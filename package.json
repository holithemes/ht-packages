{
  "name": "@holithemes/ht-packages",
  "version": "1.0.7",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "publish:all": "npm publish --workspaces --access public",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:major": "npm version major --workspaces",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:php": "vendor/bin/phpcs",
    "lint:php:fix": "vendor/bin/phpcbf",
    "lint:all": "npm run lint:js && npm run lint:php",
    "lint:all:fix": "npm run lint:js:fix && npm run lint:php:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harsha-ht-code/ht-packages.git"
  },
  "keywords": [
    "eslint",
    "phpcs",
    "linting",
    "holithemes"
  ],
  "author": "HoliThemes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/harsha-ht-code/ht-packages/issues"
  },
  "homepage": "https://github.com/harsha-ht-code/ht-packages#readme",
  "description": "HoliThemes linting and coding standards packages",
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^17.0.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "npm": "^10.0.0"
  }
}